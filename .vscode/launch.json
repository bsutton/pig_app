{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "pig_app-chrome",
            "request": "launch",
            "type": "dart",
            "args": [
                "-d",
                "chrome",
                "--web-port",
                "8000"
            ],
        },
        {
            "name": "pig_app-linux",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "linux",
                "--dart-define=SERVER_URL=http://localhost:1080"
            ],
        },
        {
            "name": "pig_app-linux-live",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "linux",
                "--dart-define=SERVER_URL=http://irrigation:80"
            ],
        },
        {
            "name": "pig_app-selected-device",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main.dart",
        },
        {
            "name": "pig_app (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "program": "lib/main.dart",
        },
        {
            "name": "pig_app (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "lib/main.dart",
        },
        {
            "name": "build release",
            "request": "launch",
            "type": "dart",
            "program": "tool/build.dart",
            "args": [
                "-r"
            ]
        },
        {
            "name": "build assets",
            "request": "launch",
            "type": "dart",
            "program": "tool/build.dart",
            "args": [
                "-a"
            ]
        }
    ]
}